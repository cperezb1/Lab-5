<h1>New Message</h1>

<%= form_with(model: @message, local: true) do |form| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h2>
      <ul>
        <% @message.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :chat_id %><br>
    <%= form.select :chat_id, Chat.all.map { |c| ["Chat ##{c.id}", c.id] } %>
  </div>

  <div>
    <%= form.label :user_id, "Author" %><br>
    <%= form.select :user_id, User.all.map { |u| [u.email, u.id] } %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
