<div class="container mt-5 d-flex justify-content-center">
  <div class="card p-4" style="min-width: 400px;">
    <h2 class="mb-4">Forgot your password?</h2>

    <%= form_with model: resource, as: resource_name, url: password_path(resource_name), local: true do |form| %>
      <div class="mb-3">
        <%= form.label :email %>
        <%= form.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <%= form.submit "Send me reset password instructions", class: "btn btn-warning w-100" %>
    <% end %>

    <hr>
    <%= link_to "Log in", new_user_session_path, class: "btn btn-link" %>
  </div>
</div>
