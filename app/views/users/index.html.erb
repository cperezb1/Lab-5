<h1>User List</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Messages Sent</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.messages.count %></td>
        <td>
          <%= link_to "Show", user_path(user), class: "btn btn-primary btn-sm" %>
          <%= link_to "Edit", edit_user_path(user), class: "btn btn-warning btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'Add New User', new_user_path, class: "btn btn-success" %></p>
